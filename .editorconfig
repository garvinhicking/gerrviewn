root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# JS files
[*.js]
indent_size = 2

# JSON files
[*.json]
indent_style = tab

[composer.json]
indent_size = 2
indent_style = space

# package.json
[package.json]
indent_size = 2

[*.neon]
indent_size = 2

# ReST files
[{*.rst,*.rst.txt}]
indent_size = 4
max_line_length = 80

# SQL files
[*.sql]
indent_style = space
indent_size = 4

# TypoScript files
[*.{typoscript,tsconfig}]
indent_size = 4

# YAML files
[{*.yml,*.yaml}]
indent_size = 4

# XLF files
[*.xlf]
indent_style = tab

# .htaccess
[.htaccess]
indent_style = space

# Markdown files
[*.md]
max_line_length = 80
